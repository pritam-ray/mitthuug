# MitthuuG Environment Variables
# Copy this file to .env.local and fill in your actual values

# ==========================================
# SUPABASE (Required)
# ==========================================
# Get these from your Supabase project settings
# https://app.supabase.com/project/_/settings/api

VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here


# ==========================================
# PAYMENT GATEWAY (Required for checkout)
# ==========================================

# Razorpay (India's payment gateway)
# Get from: https://dashboard.razorpay.com/app/keys
# Use test keys for development: rzp_test_XXXXXXXXXXXXXXXX
# Use live keys for production: rzp_live_XXXXXXXXXXXXXXXX
VITE_RAZORPAY_KEY_ID=rzp_test_XXXXXXXXXXXXXXXX


# ==========================================
# ANALYTICS (Optional - for tracking)
# ==========================================

# Google Analytics 4
# Get from: https://analytics.google.com
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Meta (Facebook) Pixel
# Get from: https://business.facebook.com/events_manager
VITE_META_PIXEL_ID=123456789012345


# ==========================================
# PAYMENT GATEWAYS (Optional - for checkout)
# ==========================================

# Stripe
# Get from: https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxxxx

# Razorpay (India)
# Get from: https://dashboard.razorpay.com/app/keys
VITE_RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx


# ==========================================
# EMAIL MARKETING (Optional)
# ==========================================

# Klaviyo
# Get from: https://www.klaviyo.com/account#api-keys-tab
VITE_KLAVIYO_PUBLIC_KEY=your-klaviyo-public-key


# ==========================================
# OTHER SERVICES (Optional)
# ==========================================

# Sentry (Error tracking)
# Get from: https://sentry.io/settings/
VITE_SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx

# Google Tag Manager (Optional - alternative to direct GA)
VITE_GTM_ID=GTM-XXXXXXX


# ==========================================
# DEVELOPMENT (Optional)
# ==========================================

# API Base URL (for development/staging)
# VITE_API_URL=http://localhost:3000/api

# Enable debug mode
# VITE_DEBUG=true
